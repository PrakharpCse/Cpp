#include <iostream>
using namespace std;
class Sample {
private:
    int x;
    int y;
public:
    Sample() {
        x = 0;
        y = 0;
        cout << "Default constructor called. x = " << x << ", y = " << y << endl;
    }
    Sample(int a, int b = 10) {
        x = a;
        y = b;
        cout << "Constructor with default arguments called. x = " << x << ", y = " << y << endl;
    }
    ~Sample() {
        cout << "Destructor called. x = " << x << ", y = " << y << endl;
    }
    void display() const {
        cout << "x = " << x << ", y = " << y << endl;
    }
};
int main() {
    Sample obj1;
    Sample obj2(5, 15);
    Sample obj3(7);

    obj1.display();
    obj2.display();
    obj3.display();
    return 0;
}
